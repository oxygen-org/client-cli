func checkVersion() (bool, error) {
	var confPath string
	if CUSTOMCONF != "" {
		confPath = CUSTOMCONF
	} else {
		for _, cpath := range CONFPATH {
			cPathName := path.Join(cpath, CONFNAME)
			target, err := os.Stat(cPathName)
			if err != nil {
				continue
			}
			if target.IsDir() {
				continue
			}
			confPath = cPathName
			break
		}
	}
	if confPath == "" {
		fmt.Println()
	}

	return true, nil
}


